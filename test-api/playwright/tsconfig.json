{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@common/*": [
                "src/common/*"
            ],
            "@config/*": [
                "src/config/*"
            ],
            "@core/*": [
                "src/core/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@types/*": [
                "src/types/*"
            ],
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}