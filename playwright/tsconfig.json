{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@config/*": [
                "src/config/*"
            ],
            "@constants/*": [
                "src/constants/*"
            ],
            "@elements/*": [
                "src/elements/*"
            ],
            "@enums/*": [
                "src/enums/*"
            ],
            "@helpers/*": [
                "src/helpers/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@types/*": [
                "src/types/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@testAPI/*": [
                "src/test-api/*"
            ],
            "@testUI/*": [
                "src/test-ui/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}